<h1>Welcome, <%= current_user.first_name %></h1>
<%= link_to "Edit My Profile", "users/#{current_user.id}/edit" %>

<h3>Here are some of the events at your state:</h3>

<table>
	<thead>
		<th>Name</th>
		<th>Date</th>
		<th>Location</th>
		<th>Host</th>
		<th>Action/Status</th>
	</thead>
	<tbody>
		<% @events.each do |e| %>
		<tr>
			<td><a href="/events/<%= e.id %>"><%= e.name %></a></td>
			<td><%= e.date.strftime('%b %e, %Y') %></td>
			<td><%= e.location %></td>
			<td><%= e.user.first_name %></td>
			<% if e.users.include?(current_user) %>
				<td>Joining <a href="attends/<%= e.id %>" data-method="delete">Cancel</a></td>
			<% elsif e.user == current_user %>
				<td><a href="/events/<%= e.id %>/edit">Edit</a> | <a href="/events/<%= e.id %>" data-method="delete" >Delete</a></td>
			<% else %>
				<td><a href="attends/<%= e.id %>" data-method="post">Join</a></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

