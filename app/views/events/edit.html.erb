<div class="link"><%= link_to "Events Dashboard", "/events" %></div>
<div class="edit_container">
	<h1 class="edit_header">Edit your event:</h1>
	<div class="adding_event">
		<div class="add1">
			<p>Name:</p>
		</div>
		<div class="add3">
			<p>Date:</p>
		</div>
		<div class="add5">
			<p>Location:</p>
		</div>
		<div class="add7">
			<p>State:</p>
		</div>
		<div class="add2">
			<form action="/events/<%= @event.id %>" method="post">
				<input type="hidden" name="_method" value="patch">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="text" name="event[name]" value="<%= @event.name %>">
		</div>
		<div class="add4">
			<input type="date" name="event[date]" value="<%= @event.date %>">
		</div>
		<div class="add6">
			<input type="text" name="event[location]" value="<%= @event.location %>">
		</div>
		<div class="add8">
			<select name="event[state]">
				<option selected="selected"><%= @event.state %></option>
				<option value="AL">AL</option>
				<option value="AK">AK</option>
